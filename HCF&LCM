#include<stdio.h>

#include<conio.h>

int main()

{

int num1,num2,i,hcf,lcm;

printf("enter two number:");

scanf("%d %d",&num1,&num2);

//calculate hcf

for(i =1;i <= num1&& i <=num2;i++)

{

if(num1 % i==0&&num2 % i==0)

{

hcf =i;

}

}

//calculate lcm

lcm = (num1 * num2) / hcf;

printf("hcf of %d and %d is %d/n", num1,num2,hcf);

printf("lcm of %d and %d is %d/n",num1,num2,lcm);

return 0;

}
